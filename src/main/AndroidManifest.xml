<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.team4.smartwatch" >

    <uses-permission android:name="android.permission.VIBRATE" />
    <uses-permission android:name="android.permission.CALL_PHONE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme" >
        <activity android:name=".SmartWatch" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".helpActivity" >
        </activity>
        <activity android:name=".emergency" >
        </activity>
        <activity android:name=".PictureMode" >
        </activity>
        <activity android:name=".TalkActivity" >
        </activity>
        <activity android:name=".HearActivity" >
        </activity>

        <activity
            android:name=".SettingsActivity"
            android:label="@string/title_activity_settings" >
        </activity>
        <activity android:name=".SettingsActivty" >
        </activity>
        <activity android:name=".UserGuide" >
        </activity>
    </application>

</manifest>
